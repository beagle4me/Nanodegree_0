<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mainscreen">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center">


    <TextView android:layout_width="match_parent" android:layout_height="100dp"
        android:gravity="center" android:text="My Nanodegree Apps!!"
        android:textSize="@dimen/main_activity_heading"
        />


    <Button
        style="@style/main_screen_button"
        android:text="@string/app_name_1"
        android:id="@+id/app_name_1"
        android:onClick="clickOnBtn"
        />
    <Button
        style="@style/main_screen_button"
        android:text="@string/app_name_2"
        android:id="@+id/app_name_2"
        android:onClick="clickOnBtn"
        />
    <Button
        style="@style/main_screen_button"
        android:text="@string/app_name_3"
        android:id="@+id/app_name_3"
        android:onClick="clickOnBtn"
        />

    <Button
        style="@style/main_screen_button"
        android:text="@string/app_name_4"
        android:id="@+id/app_name_4"
        android:onClick="clickOnBtn"
        />

    <Button
        style="@style/main_screen_button"
        android:text="@string/app_name_5"
        android:id="@+id/app_name_5"
        android:onClick="clickOnBtn"
        />

    <Button
        style="@style/main_screen_button"
        android:text="@string/final_app_name"
        android:background="@android:color/holo_red_light"
        android:id="@+id/final_app"
        android:onClick="clickOnBtn"
        />

   </LinearLayout>

</ScrollView>

